@model EvernestWeb.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(m => m.Username, "User name")
            <p class="text-danger">
                @Html.ValidationMessageFor(m => m.Username)
            </p>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "User name" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Password")
            <p class="text-danger">
                @Html.ValidationMessageFor(m => m.Password)
            </p>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
        </div>
        <div class="checkbox">
            @Html.LabelFor(m => m.RememberMe, "Remember me?")
            @Html.CheckBoxFor(m => m.RememberMe)
        </div>
        <input type="submit" class="btn btn-primary" value="Login"/>
        @Html.ActionLink("Register", "Register", new { area = "" }, new { @class = "btn btn-default" })
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}