@model EvernestWeb.ViewModels.DeleteStreamModel

<h2><a href="/Manager">Manager</a> &gt; Delete a Stream</h2>

<div>
        
        @using (Html.BeginForm("DeleteStream", "Manager", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <fieldset>
                <legend>Delete Stream : @ViewBag.StreamId</legend>
                @Html.LabelFor(m => m.DeleteConfirmPassword)
                @Html.PasswordFor(m => m.DeleteConfirmPassword)
                <input type="hidden" name="StreamId" value="@{ Write(ViewBag.StreamId);}" />
                <input type="submit" value="Confirm deletion" />
            </fieldset>
        }
    
</div>

