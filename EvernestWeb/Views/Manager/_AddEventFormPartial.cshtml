@model EvernestWeb.ViewModels.NewEventModel

@using (Html.BeginForm("PushEvent", "Manager", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Add event</legend>
                @Html.LabelFor(m => m.Content)
                @Html.TextBoxFor(m => m.Content)
                <input type="hidden" name="StreamId" value="@{ Write(ViewBag.StreamId);}" />
                <input type="submit" value="Push an Event" />
    </fieldset>
}

