@model EvernestWeb.ViewModels.NewStreamUserModel
    
@using (Html.BeginForm("NewStreamUser", "Manager", FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.NewUser, new {@class = "sr-only"})
        @Html.TextBoxFor(m => m.NewUser, new {@class = "form-control", @placeholder = "Add user by ID..."})
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.Right, new SelectList(Model.AccessRightsDictionary, "Key", "Value"), new {@class = "form-control"})
    </div>
    <input type="hidden" name="StreamId" value="@{ Write(ViewBag.StreamId);}" />
    <input type="submit" class="btn btn-default" value="Valider" />
}
