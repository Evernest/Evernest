@model EvernestWeb.ViewModels.NewStreamUserModel
    
@using (Html.BeginForm("NewStreamUser", "Manager", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>New Stream User</legend>
                @Html.LabelFor(m => m.NewUser)
                @Html.TextBoxFor(m => m.NewUser)
                @Html.DropDownListFor(m => m.Right, new SelectList(Model.AccessRightsDictionary, "Key", "Value"))
                <input type="hidden" name="StreamId" value="@{ Write(ViewBag.StreamId);}" />
                <input type="submit" value="New User" />
    </fieldset>
}