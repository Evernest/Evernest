@model EvernestWeb.ViewModels.NewStreamToSourceModel
           
@using (Html.BeginForm("NewStreamToSource", "Manager", FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(m => m.StreamId, new { @class = "sr-only" })
        @Html.TextBoxFor(m => m.StreamId, new { @class = "form-control", @placeholder = "Add stream by ID..." })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.Right, new SelectList(Model.AccessRightsDictionary, "Key", "Value"), new { @class = "form-control" })
    </div>
    <input type="hidden" name="SourceId" value="@{ Write(ViewBag.SourceId);}" />
    <input type="submit" class="btn btn-default" value="Add Rights" />

}
