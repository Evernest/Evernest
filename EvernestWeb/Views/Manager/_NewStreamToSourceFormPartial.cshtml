@model EvernestWeb.ViewModels.NewStreamToSourceModel
           
@using (Html.BeginForm("NewStreamToSource", "Manager", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>New Stream</legend>
        @Html.LabelFor(m => m.StreamId)
        @Html.TextBoxFor(m => m.StreamId)
        @Html.DropDownListFor(m => m.Right, new SelectList(Model.AccessRightsDictionary, "Key", "Value"))
        <input type="hidden" name="SourceId" value="@{ Write(ViewBag.SourceId);}" />
        <input type="submit" value="Valider" />
    </fieldset>
}
