@model IEnumerable<EvernestWeb.Models.ModelSource>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Source name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var source in Model)
        {
            <tr>
                <td>@source.Id</td>
                <td>@source.Name</td>
                <td>@Html.ActionLink("Details", "Source", "Manager", new { id = source.Id })</td>
                <td>@Html.ActionLink("Delete", "DeleteSource", "Manager", new { id = source.Id })</td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td></td>
                <td><em>You have no source yet.</em></td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td>
                @{ Html.RenderPartial("_NewSourcePartial", new EvernestWeb.ViewModels.NewSourceModel()); }
            </td>
            <td></td>
            <td></td>
        </tr>
    </tfoot>
</table>
