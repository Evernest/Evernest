@model EvernestWeb.ViewModels.UpdateSourceRight

@using (Html.BeginForm("UpdateSourceRight", "Manager", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        @Html.DropDownListFor(x => x.Right, new SelectList(Model.AccessRightsDictionary, "Key", "Value"))
        <input type="hidden" name="SourceId" value="@{Write(ViewBag.SourceId);}" />
        <input type="hidden" name="StreamId" value="@{Write(ViewBag.StreamId);}" />
        <input type="submit" value="Update" />
    </fieldset>
}
