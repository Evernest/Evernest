@model EvernestWeb.ViewModels.UpdateSourceRight

@using (Html.BeginForm("UpdateSourceRight", "Manager", FormMethod.Post, new {@class = "form-inline"}))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.DropDownListFor(x => x.Right, new SelectList(Model.AccessRightsDictionary, "Key", "Value"), new {@class = "form-control"})
    </div>
    <input type="hidden" name="SourceId" value="@{ Write(ViewBag.SourceId); }"/>
    <input type="hidden" name="StreamId" value="@{ Write(ViewBag.StreamId); }"/>
    <input type="submit" class="btn btn-default" value="Update"/>
}