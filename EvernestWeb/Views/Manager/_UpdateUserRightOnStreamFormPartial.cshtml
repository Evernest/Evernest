@using System.Collections
@using EvernestFront.Contract
@model EvernestWeb.ViewModels.UpdateUserRightOnStream

@using (Html.BeginForm("UpdateUserRightOnStream", "Manager", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        @Html.DropDownListFor(x => x.Right, new SelectList(Model.AccessRightsDictionary, "Key", "Value"))
        <input type="hidden" name="UserId" value="@{Write(ViewBag.UserId);}" />
        <input type="hidden" name="StreamId" value="@{ Write(ViewBag.StreamId);}" />
        <input type="submit" value="Update" />
    </fieldset>
}
