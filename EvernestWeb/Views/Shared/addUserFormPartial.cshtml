@model EvernestWeb.ViewModels.StreamAndEvents
    
@using (Html.BeginForm("AddUser", "Store", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Add User</legend>
                @Html.LabelFor(m => m.AddUserModelObject.NewUser)
                @Html.TextBoxFor(m => m.AddUserModelObject.NewUser)
                @Html.DropDownListFor(m => m.AddUserModelObject.Right, new SelectList(ViewBag.RightList, "Right", "Name"))
                <input type="hidden" name="sid" value="@{ Write(Model.Id);}" />
                <input type="submit" value="Valider" />
    </fieldset>
}